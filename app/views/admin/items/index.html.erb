<h1 class="my-4 text-center">商品一覧 (admin)</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover table-bordered">
    <thead class="thead-light">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>販売ステータス</th>
        <th>アクション</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= number_to_currency(item.price, unit: "¥", format: "%u%n") %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_deleted %>
              <span class="badge bg-danger">停止中</span>
            <% else %>
              <span class="badge bg-success">販売中</span>
            <% end %>
          </td>
          <td>
            <%= link_to '編集', edit_admin_item_path(item), class: "btn btn-sm btn-secondary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="text-center mt-4">
  <%= link_to "商品新規登録", new_admin_item_path, class: "btn btn-primary" %>
</div>